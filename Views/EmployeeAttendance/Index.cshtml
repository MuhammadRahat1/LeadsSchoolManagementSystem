@model List<LeadsSMS.Models.EmployeeAttendance>

@{
    ViewData["Title"] = "Attendance Records";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Attendance Records</h2>

<a asp-action="Create" class="btn btn-success mb-2">Mark Attendance</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.EmployeeId</td>
                <td>@record.AttendanceDate.ToShortDateString()</td>
                <td>@record.Status</td>
            </tr>
        }
    </tbody>
</table>
