@model LeadsSMS.Models.StudentFee

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Submit Student Fee";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FeeMonth"></label>
        <input asp-for="FeeMonth" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PaymentDate"></label>
        <input asp-for="PaymentDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit Fee</button>
</form>