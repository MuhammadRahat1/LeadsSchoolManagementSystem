
@model List<LeadsSMS.Models.StudentFee>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "All Student Fees";
}

<h2>@ViewData["Title"]</h2>

<a class="btn btn-success mb-3" asp-action="Create">Submit Fee</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Fee Month</th>
            <th>Amount</th>
            <th>Payment Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fee in Model)
        {
            <tr>
                <td>@fee.FeeMonth</td>
                <td>@fee.Amount</td>
                <td>@fee.PaymentDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>