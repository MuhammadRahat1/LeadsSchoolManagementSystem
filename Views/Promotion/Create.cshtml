@model LeadsSMS.Models.Promotion

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Promote Student";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="mt-4">
    <div class="mb-3">
        <label for="studentId" class="form-label">Student</label>
        <select id="studentId" name="studentId" class="form-select" required>
            <option value="">-- Select Student --</option>
            @foreach (var s in ViewBag.Students)
            {
                <option value="@s.Id">@s.FullName</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label for="toClass" class="form-label">New Class</label>
        <input type="text" id="toClass" name="toClass" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="promotionDate" class="form-label">Promotion Date</label>
        <input type="date" id="promotionDate" name="promotionDate" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Promote</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
</form>
