@model IEnumerable<LeadsSMS.Models.Employee>

@{
    ViewData["Title"] = "All Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>@ViewData["Title"]</h2>

<a asp-action="Create" class="btn btn-success mb-2">Add New Employee</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Designation</th>
            <th>Contact</th>
            <th>Email</th>
            <th>Joining Date</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.FullName</td>
                <td>@emp.Designation</td>
                <td>@emp.ContactNumber</td>
                <td>@emp.Email</td>
                <td>@emp.JoiningDate.ToShortDateString()</td>
                <td>@emp.Salary.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
