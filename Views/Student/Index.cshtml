@model List<LeadsSMS.Models.Student>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "All Students";
}

<h2>@ViewData["Title"]</h2>

<a class="btn btn-success mb-3" asp-action="Create">Register New Student</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Gender</th>
            <th>DOB</th>
            <th>Class</th>
            <th>Contact</th>
            <th>Admission Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FullName</td>
                <td>@student.Gender</td>
                <td>@student.DateOfBirth.ToShortDateString()</td>
                <td>@student.ClassName</td>
                <td>@student.ContactNumber</td>
                <td>@student.AdmissionDate.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>
